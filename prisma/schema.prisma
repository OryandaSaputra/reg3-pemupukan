// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum KategoriTanaman {
  TM
  TBM
  BIBITAN
}

model RencanaPemupukan {
  id              Int              @id @default(autoincrement())
  kategori        KategoriTanaman
  kebun           String
  kodeKebun       String
  tanggal         DateTime?        @db.Date   // boleh null
  afd             String
  tt              String
  blok            String
  luasHa          Float
  inv             Int
  jenisPupuk      String
  aplikasiKe      Int
  dosisKgPerPokok Float
  kgPupuk         Float

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // INDEXES
  // Untuk filter per kebun + tanggal (sudah ada, dipertahankan)
  @@index([kebun, tanggal], name: "idx_rencana_kebun_tanggal")

  // Untuk query yang sering pakai kodeKebun + afd + blok (mis. per afdeling / blok)
  @@index([kodeKebun, afd, blok], name: "idx_rencana_kodeKebun_afd_blok")

  // Untuk query range by tanggal (tanpa kebun), misalnya per bulan/tahun semua kebun
  @@index([tanggal], name: "idx_rencana_tanggal")
}

model RealisasiPemupukan {
  id              Int              @id @default(autoincrement())
  kategori        KategoriTanaman
  kebun           String
  kodeKebun       String
  tanggal         DateTime?        @db.Date   // boleh null
  afd             String
  tt              String
  blok            String
  luasHa          Float
  inv             Int
  jenisPupuk      String
  aplikasiKe      Int
  dosisKgPerPokok Float
  kgPupuk         Float

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // INDEXES
  @@index([kebun, tanggal], name: "idx_realisasi_kebun_tanggal")
  @@index([kodeKebun, afd, blok], name: "idx_realisasi_kodeKebun_afd_blok")
  @@index([tanggal], name: "idx_realisasi_tanggal")
}

model CurahHujanHarian {
  /// Kode kebun, misal "TME", "TPU", dll
  kebunCode String

  /// Tanggal (harian, tanpa jam – disimpan sebagai 00:00)
  tanggal   DateTime

  /// Nama kebun (cache dari KEBUN_LABEL, biar gampang dipakai di laporan)
  kebunName String

  /// Total curah hujan harian (mm) untuk kebun + tanggal ini
  totalMm   Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Composite primary key → bisa pakai upsert([kebunCode, tanggal])
  @@id([kebunCode, tanggal])

  @@index([tanggal])
  @@index([kebunCode, tanggal], name: "idx_curah_kebun_tanggal")
}
